<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calendar.calendar_page" >

    <com.skyhope.eventcalenderlibrary.CalenderEvent
        android:id="@+id/calendar_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="320dp">

    </com.skyhope.eventcalenderlibrary.CalenderEvent>

    <Button
        android:id="@+id/event_button"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginEnd="145dp"
        android:text="New Event"
        app:layout_constraintBottom_toBottomOf="@+id/calendar_event"
        app:layout_constraintEnd_toEndOf="@+id/remove_event_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/remove_event_button"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginStart="255dp"
        android:text="Remove Event"
        app:layout_constraintBottom_toBottomOf="@+id/calendar_event"
        app:layout_constraintEnd_toEndOf="@+id/calendar_event"
        app:layout_constraintStart_toEndOf="@+id/event_button"
        app:layout_constraintStart_toStartOf="@+id/calendar_event"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/set_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        android:text="Event Name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/event_button" />

    <TextView
        android:id="@+id/days_events"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/set_event_name"
        app:layout_constraintRight_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>